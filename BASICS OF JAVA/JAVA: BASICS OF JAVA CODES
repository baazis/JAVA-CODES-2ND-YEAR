Code 6:

import java.util.Scanner;
public class Multiply{
public static void main(String args[]){
Scanner inp= new Scanner(System.in);
System.out.println("Enter the number : ");
int no= inp.nextInt();
for(int i=1;i<=10;i++)
{
System.out.println(no+"*"+i+" = "+no*i);
}}}

